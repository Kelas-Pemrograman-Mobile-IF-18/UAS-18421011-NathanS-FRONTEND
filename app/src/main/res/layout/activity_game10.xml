<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Game10">

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/steampage2"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>

            <!--steam wallet-->
            <LinearLayout
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:padding="15dp"
                android:background="@drawable/background_viewall"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="STEAM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" />
                <TextView
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:text="Open, Browse and Download!"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" />
                <Button
                    android:layout_gravity="center_vertical"
                    app:icon="@drawable/ic_steam"
                    android:id="@+id/btnStoreGame10"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#0c4c82"
                    android:textAllCaps="false"
                    android:text="Open"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!--bar bawah-->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        app:menu="@menu/navigation_menu"
        app:labelVisibilityMode="unlabeled"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/barbawah" />

</LinearLayout>