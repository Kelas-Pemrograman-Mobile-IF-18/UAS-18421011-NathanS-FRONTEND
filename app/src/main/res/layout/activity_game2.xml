<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".Game2">

    <!--body-->
    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/bg2"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>

            <!--detail-->
            <LinearLayout
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:padding="15dp"
                android:background="@drawable/background_viewall"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="Cyberpunk 2077"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="Cyberpunk 2077 is an open-world, action-adventure story set in Night City, a megalopolis obsessed with power, glamour and body modification. You play as V, a mercenary outlaw going after a one-of-a-kind implant that is the key to immortality."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="Rp 699 999"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />
                <Button
                    android:backgroundTint="#0c4c82"
                    android:textAllCaps="false"
                    android:text="Beli"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/btnStoreGame2"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                    app:strokeColor="#0c4c82"
                    app:strokeWidth="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Store Page"
                    android:textAllCaps="false"
                    android:textColor="#0c4c82"
                    app:icon="@drawable/ic_steam"
                    app:iconTint="#0c4c82" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!--bar bawah-->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        app:menu="@menu/navigation_menu"
        app:labelVisibilityMode="unlabeled"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/barbawah" />

</LinearLayout>